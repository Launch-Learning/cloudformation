		"LoadBalancedConfigurationTemplate": {
			"Type": "AWS::ElasticBeanstalk::ConfigurationTemplate",
			"Properties": {
				"ApplicationName": {
					"Ref": "Application"
				},
				"Description": "Launch LRS load balanced configuration",
				"OptionSettings": [
					{
						"Namespace": "aws:elasticbeanstalk:environment",
						"OptionName": "EnvironmentType",
						"Value": "LoadBalanced"
					},
					{
						"Namespace": "aws:elasticbeanstalk:environment",
						"OptionName": "LoadBalancerType",
						"Value": "application"
					},
					{
						"Namespace": "aws:elbv2:listener:443",
						"OptionName": "Protocol",
						"Value": "HTTPS"
					},
					{
						"Namespace": "aws:elbv2:listener:443",
						"OptionName": "SSLCertificateArns",
						"Value": {
							"Ref": "CertificateArn"
						}
					},
					{
						"Namespace": "aws:elbv2:listener:443",
						"OptionName": "SSLPolicy",
						"Value": "ELBSecurityPolicy-TLS-1-2-2017-01"
					},
					{
						"Namespace": "aws:elasticbeanstalk:environment:process:default",
						"OptionName": "HealthCheckPath",
						"Value": "/actuator/health"
					},
					{
						"Namespace": "aws:autoscaling:launchconfiguration",
						"OptionName": "InstanceType",
						"Value": "t3.micro"
					},
					{
						"Namespace": "aws:autoscaling:launchconfiguration",
						"OptionName": "IamInstanceProfile",
						"Value": "aws-elasticbeanstalk-ec2-role"
					},
					{
						"Namespace": "aws:autoscaling:launchconfiguration",
						"OptionName": "SecurityGroups",
						"Value": {
							"Ref": "Ec2SecurityGroup"
						}
					},
					{
						"Namespace": "aws:elasticbeanstalk:application:environment",
						"OptionName": "SERVER_PORT",
						"Value": "5000"
					},
					{
						"Namespace": "aws:elasticbeanstalk:application:environment",
						"OptionName": "SPRING_DATASOURCE_URL",
						"Value": {
							"Fn::Join": [
								"",
								[
									"jdbc:mysql://",
									{
										"Fn::GetAtt": [
											"Rds",
											"Endpoint.Address"
										]
									},
									":",
									{
										"Fn::GetAtt": [
											"Rds",
											"Endpoint.Port"
										]
									},
									"/launch_lrs?zeroDateTimeBehavior=convertToNull"
								]
							]
						}
					},
					{
						"Namespace": "aws:elasticbeanstalk:application:environment",
						"OptionName": "SPRING_DATASOURCE_USERNAME",
						"Value": "lrs"
					},
					{
						"Namespace": "aws:elasticbeanstalk:application:environment",
						"OptionName": "SPRING_DATASOURCE_PASSWORD",
						"Value": {
							"Ref": "DatabaseMasterPassword"
						}
					}
				],
				"SolutionStackName": "64bit Amazon Linux 2 v3.1.1 running Corretto 11"
			},
			"Metadata": {
				"AWS::CloudFormation::Designer": {
					"id": "f8323c94-ae8b-4c94-83b1-1af612bc4939"
				}
			}
		},
		"Environment": {
			"Type": "AWS::ElasticBeanstalk::Environment",
			"Properties": {
				"ApplicationName": {
					"Ref": "Application"
				},
				"Description": "Launch LRS Environment",
				"TemplateName": {
					"Ref": "LoadBalancedConfigurationTemplate"
				},
				"VersionLabel": {
					"Ref": "ApplicationVersion"
				}
			},
			"Metadata": {
				"AWS::CloudFormation::Designer": {
					"id": "e9c30f5e-077a-4af8-a0a4-ac85276b8750"
				}
			}
		},
		"Rds": {
			"Type": "AWS::RDS::DBInstance",
			"Properties": {
				"AllocatedStorage": "20",
				"BackupRetentionPeriod": "30",
				"DBInstanceClass": "db.t3.micro",
				"DBName": "launch_lrs",
				"Engine": "mysql",
				"EngineVersion": "8.0.19",
				"MasterUsername": "lrs",
				"MasterUserPassword": {
					"Ref": "DatabaseMasterPassword"
				},
				"PreferredBackupWindow": "05:00-06:00",
				"StorageEncrypted": true,
				"VPCSecurityGroups": [
					{
						"Fn::GetAtt": [
							"RdsSecurityGroup",
							"GroupId"
						]
					}
				]
			},
			"Metadata": {
				"AWS::CloudFormation::Designer": {
					"id": "d6c858d3-c070-49ff-9dde-91d66f20d9b6"
				}
			}
		},
		"RdsSecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"GroupDescription": "Launch LRS RDS security group"
			},
			"Metadata": {
				"AWS::CloudFormation::Designer": {
					"id": "e61c1a29-a401-4f21-b0a9-d4c317714684"
				}
			}
		},
		"Ec2SecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"GroupDescription": "Launch LRS EC2 security group"
			},
			"Metadata": {
				"AWS::CloudFormation::Designer": {
					"id": "78d6aaf8-3cd3-4fce-b750-3b144a829e28"
				}
			}
		},
		"RdsSecurityGroupIngress": {
			"Type": "AWS::EC2::SecurityGroupIngress",
			"Properties": {
				"Description": "Allows access to Launch LRS RDS instance",
				"GroupName": {
					"Ref": "RdsSecurityGroup"
				},
				"SourceSecurityGroupName": {
					"Ref": "Ec2SecurityGroup"
				},
				"IpProtocol": "tcp",
				"FromPort": {
					"Fn::GetAtt": [
						"Rds",
						"Endpoint.Port"
					]
				},
				"ToPort": {
					"Fn::GetAtt": [
						"Rds",
						"Endpoint.Port"
					]
				}
			}
		},
		"route53": {
			"Condition": "CreateRecordSet",
			"Type": "AWS::CloudFormation::Stack",
			"Properties": {
				"Parameters": {
					"TargetDNSName": {
						"Fn::GetAtt": [
							"Environment",
							"EndpointURL"
						]
					},
					"TargetHostedZoneId": {
						"Fn::FindInMap": [
							"HostIdMap",
							{
								"Ref": "AWS::Region"
							},
							"LoadBalancer"
						]
					},
					"HostedZoneId": {
						"Ref": "HostedZoneId"
					},
					"DNSName": {
						"Ref": "DNSName"
					}
				},
				"TemplateURL": "https://launch-learning.s3.amazonaws.com/launch-lrs-route53.json"
			},
			"Metadata": {
				"AWS::CloudFormation::Designer": {
					"id": "4901ecd5-9260-4477-a203-7875ee53acb7"
				}
			}
		}
	},
	"Outputs": {
		"url": {
			"Description": "The URL of your Launch LRS",
			"Value": {
				"Fn::Join": [
					"",
					[
						"http://",
						{
							"Fn::GetAtt": [
								"Environment",
								"EndpointURL"
							]
						}
					]
				]
			}
		}
	}
